@model QuestionCreateModel
@{
	ViewData["Title"] = "Create";
}

<div class="col-md-12">
	<!-- general form elements -->
	<div class="card card-primary">
		<partial name="_ResponsePartial" />
		<div class="card-header">
			<h3 class="card-title">Create New Question</h3>
		</div>
		<!-- /.card-header -->
		<!-- form start -->
		<form asp-action="Create" asp-controller="Question" asp-area="Admin" 
			asp-antiforgery="true">
			<div class="card-body">
				<div class="form-group">
					<label asp-for="Title">Question title</label>
					<input type="text" class="form-control" asp-for="Title">
				</div>
				<div class="form-group">
					<label asp-for="Content">Question content</label>
					<input type="text" class="form-control" asp-for="Content">
				</div>
				<div class="form-group">
					<label asp-for="Tags">Question required tags</label>
					<input type="text" class="form-control" asp-for="Tags">
				</div>
			</div>
			<!-- /.card-body -->

			<div class="card-footer">
				<button type="submit" class="btn btn-primary">Submit</button>
			</div>
		</form>
	</div>
	<!-- /.card -->
</div>


